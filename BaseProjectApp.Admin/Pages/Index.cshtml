    </div>


</div>


@section Scripts
{
<script src="~/assets/vendors/custom/flot/flot.bundle.js" type="text/javascript"></script>

<script>

     var Data = '';
     //@Html.Raw(Model.DataObj);
     var Valid = false;

     if(Data != '')
     {
             Valid = Data.Activated == 1 ? true : false;
             var portalSettings = {
                    "TextVariables" : Data.Textvariables , "Lookups" : Data.Lookups , "CompanyLookups" : Data.Companylookups
                    , "SystemParameters": Data.Systemparameters , "Countries":Data.Countries , "Keywords": Data.Keywords
                }
             var contactInfo = {"Inquiries" : Data.Inquiries , "FAQs" : Data.FAQs , "Authors" : Data.Authors }
             var Others = {"TeamMembers" : Data.TeamMembers ,"PartnersDonors" : Data.PartnersDonors }
             var Security = {"Users": Data.Users ,"Roles": Data.Roles }
             var Careers = {"Careers" : Data.Careers , "Applicants" : Data.Applicants }
             var WebContent = {
                             "MediaFiles" : Data.MediaFiles , "Sliders" : Data.Sliders , "ContentRecords" : Data.ContentRecords ,
                             "Albums" : Data.Albums , "Menus": Data.Menus , "Publications" : Data.Publications
                             }
       }

    $(document).ready(function(){
            
         
            if(Valid) 
            {   
                //$('#Dashboard').show();
                //$('#WelcomeMessage').hide();
                DashboardCharts.init();  
            }
            else
            {
                $('#WelcomeMessage').show();
                $('#Dashboard').hide();
            }

            

    });


     var DashboardCharts = function() {

        $('#TextvariablesNum').html(portalSettings.TextVariables);
        $('#LookupsNum').html(portalSettings.Lookups);
        $('#CompanylookupsNum').html(portalSettings.CompanyLookups);
        $('#SystemparametersNum').html(portalSettings.SystemParameters);
        $('#CountriesNum').html(portalSettings.Countries);
        $('#KeywordsNum').html(portalSettings.Keywords);


        $('#MediaFilesNum').html(WebContent.MediaFiles);
        $('#SlidersNum').html(WebContent.Sliders);
        $('#ContentRecordsNum').html(WebContent.ContentRecords);
        $('#AlbumsNum').html(WebContent.Albums);
        $('#MenusNum').html(WebContent.Menus);
        $('#PublicationsNum').html(WebContent.Publications);

        $('#FAQsNum').html(contactInfo.FAQs);
        $('#InquiriesNum').html(contactInfo.Inquiries);
        $('#AuthorsNum').html(contactInfo.Authors);

        $('#TeamMembersNum').html(Others.TeamMembers);
        $('#PartnersDonorsNum').html(Others.PartnersDonors);

        $('#RolesNum').html(Security.Roles);
        $('#UsersNum').html(Security.Users);

        $('#CareersNum').html(Careers.Careers);
        $('#ApplicantsNum').html(Careers.Applicants);


        var PortalSettingsChartObj = function() {
            var PortalSettingsChartData = [
                {label: "Text variables", data: portalSettings.TextVariables, color:  KTApp.getStateColor("brand")},
                {label: "Lookups", data: portalSettings.Lookups, color:  KTApp.getStateColor("dark")},
                {label: "Company lookups", data: portalSettings.CompanyLookups, color:  KTApp.getStateColor("primary")},
                {label: "System parameters", data: portalSettings.SystemParameters, color:  KTApp.getStateColor("danger")},
                {label: "Countries", data: portalSettings.Countries, color:  KTApp.getStateColor("success")},
                {label: "Keywords", data: portalSettings.Keywords, color:  KTApp.getStateColor("warning")}
            ];

            $.plot($("#PortalSettingsChart"), PortalSettingsChartData, {
                series: {
                    pie: {
                        show: true
                    }
                },
                legend: {
                    show: false
                }
            });
        }

         var WebContentChartObj = function() {
            var WebContentChartData = [
                {label: "Media files", data: WebContent.MediaFiles, color:  KTApp.getStateColor("brand")},
                {label: "Sliders", data: WebContent.Sliders, color:  KTApp.getStateColor("dark")},
                {label: "Content records", data: WebContent.ContentRecords, color:  KTApp.getStateColor("primary")},
                {label: "Albums", data: WebContent.Albums, color:  KTApp.getStateColor("danger")},
                {label: "Menus", data: WebContent.Menus, color:  KTApp.getStateColor("success")},
                {label: "Publications", data: WebContent.Publications, color:  KTApp.getStateColor("warning")}
            ];

            $.plot($("#WebContentChart"), WebContentChartData, {
                series: {
                    pie: {
                        show: true
                    }
                },
                legend: {
                    show: false
                }
            });
        }


        var ContactInfoChartObj = function() {
            var ContactInfoChartData = [
                {label: "Inquiries", data: contactInfo.Inquiries, color:  KTApp.getStateColor("brand")},
                {label: "FAQs", data: contactInfo.FAQs, color:  KTApp.getStateColor("dark")},
                {label: "Authors", data: contactInfo.Authors, color:  KTApp.getStateColor("primary")},
            ];

            $.plot($("#ContactInfoChart"), ContactInfoChartData, {
                series: {
                    pie: {
                        show: true
                    }
                },
                legend: {
                    show: false
                }
            });
        }

          var OthersChartObj = function() {
            var OthersChartData = [
                {label: "Team members", data: Others.TeamMembers, color:  KTApp.getStateColor("brand")},
                {label: "Partners donors", data: Others.PartnersDonors, color:  KTApp.getStateColor("dark")}
            ];

            $.plot($("#OthersChart"), OthersChartData, {
                series: {
                    pie: {
                        show: true
                    }
                },
                legend: {
                    show: false
                }
            });
        }


            var SecurityChartObj = function() {
            var SecurityChartData = [
                {label: "Roles", data: Security.Roles, color:  KTApp.getStateColor("brand")},
                {label: "Users", data: Security.Users, color:  KTApp.getStateColor("dark")}
            ];

            $.plot($("#SecurityChart"), SecurityChartData, {
                series: {
                    pie: {
                        show: true
                    }
                },
                legend: {
                    show: false
                }
            });
        }


         var CareersChartObj = function() {
            var CareersChartData = [
                {label: "Careers", data: Careers.Careers, color:  KTApp.getStateColor("brand")},
                {label: "Applicants", data: Careers.Applicants, color:  KTApp.getStateColor("dark")}
            ];

            $.plot($("#CareersChart"), CareersChartData, {
                series: {
                    pie: {
                        show: true
                    }
                },
                legend: {
                    show: false
                }
            });
        }


        return {
            init: function() {
                PortalSettingsChartObj();
                ContactInfoChartObj();
                WebContentChartObj();
                SecurityChartObj();
                OthersChartObj();
                CareersChartObj();
            }
        };

    }();



</script>

}