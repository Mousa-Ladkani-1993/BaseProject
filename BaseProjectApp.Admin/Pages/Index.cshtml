                            <div id="ContactInfoChart" style="height: 300px;"></div>
                        </div>

                        <div class="col-3 m-auto">

                            <div class="row">
                                <div class="col-12">
                                    <span class="kt-badge kt-badge--brand font-weight-bold kt-badge--md kt-badge--rounded" id="InquiriesNum"></span>
                                    <span class="font-weight-bold ml-2">Inquiries</span>
                                </div>

                                <div class="col-12 mt-3">
                                    <span class="kt-badge kt-badge--dark font-weight-bold kt-badge--md kt-badge--rounded" id="FAQsNum"></span>
                                    <span class="font-weight-bold ml-2">FAQs</span>
                                </div>

                                <div class="col-12 mt-3">
                                    <span class="kt-badge kt-badge--primary font-weight-bold kt-badge--md kt-badge--rounded" id="AuthorsNum"></span>
                                    <span class="font-weight-bold ml-2">Authors</span>
                                </div>


                            </div>


                        </div>
                    </div>
